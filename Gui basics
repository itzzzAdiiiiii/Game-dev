#using tikinter module
from tkinter import*
screen = Tk()
#setting screen size
screen.geometry("1000x800")
#labels
username = Label(screen,text= "username").place(x = 415,y = 200)
#entry
entry1 = Entry(screen,width = 37).place(x = 435,y = 200)
B = Button(text = "click me",bd = "5", background = "purple",command=screen.destroy)
B.pack(side = "top") 
screen.mainloop()
